{
	"name": "bird",
	"version": "0.1.0",
	"description": "CLI tool for tweeting and replying via Twitter/X GraphQL API",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"bird": "dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"binary": "bun build --compile --minify src/index.ts --outfile bird"
	},
	"dependencies": {
		"commander": "^12.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.10.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vitest": "^2.1.6"
	},
	"engines": {
		"node": ">=20"
	}
}
